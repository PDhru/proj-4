<body>
    <header class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-evenly">
            <div class="logo">
                <img src="/img/logo.png" width="150px"  alt="">
            </div>
            <ul class="d-flex">
                <li class="ms-4"><a href="/" class="text-dark fw-bold fs-4">Home</a></li>
                <li class="ms-4"><a href="/addbook" class="text-dark fw-bold fs-4">Add Books</a></li>
            </ul>
        </div>
        
    </header>
    <main>  
        <% books.forEach(function(book) { %>
        <div class="books">
            <div>
                <img src="<%= book.bookUrl %>" alt="" class="book-img">
            </div>
            <div class="descp">
                <h2 class="book-name"><%= book.bookName %></h2>
                <h3 class="author">by <%= book.bookAuthor %></h3>
                <h3 class="rating">Price : <%= book.bookPrice %> </h3>
                <!-- <h3 class="rating">1.987 rating</h3> -->
                <p class="info">
                    <%= book.bookDisc %>
                </p>
                <a href="/updatebook/<%= book._id %>"><button type="button">Update</button></a>
                <form action="/deletebook/<%= book._id %>" method="post" style="display:inline;">
                    <button type="submit" class="Delete">Delete</button>
                </form>
            </div>
        </div>
        <% }); %>
    </main>

